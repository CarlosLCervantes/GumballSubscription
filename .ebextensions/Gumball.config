option_settings:
  - option_name: BUNDLE_DISABLE_SHARED_GEMS
    value: "1"
  - option_name: BUNDLE_PATH
    value: "vendor/bundle"

packages:
  yum:
    git: []

container_commands:
  00:
    command: bundle exec rake cron
  02create:
    command: rake db:create
  03migrate:
    command: rake db:migrate